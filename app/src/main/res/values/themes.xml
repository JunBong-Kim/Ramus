<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ramus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/background_primary</item>
        <item name="colorOnPrimary">@color/background_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/background_primary</item>
        <item name="colorOnSecondary">@color/background_primary</item>


        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Ui2.coustomtextfield" parent="ThemeOverlay.Design.TextInputEditText">
        <item name="colorPrimary">@color/primary_shy</item>
    </style>




    <style name="CustomBottomSheetDialog"
        parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="background">@color/background_secondary</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="background">@color/background_secondary</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/primary_shy</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="background">@color/background_secondary</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>

