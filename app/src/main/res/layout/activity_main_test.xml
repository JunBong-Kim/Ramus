<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_third"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollview_main"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:background="@color/background_third"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:elevation="3dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/rec_main_primary"
                android:paddingBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/layout_main_function"
                    layout="@layout/layout_main_function"></include>
            </LinearLayout>
            <include layout="@layout/layout_safe_library"
                android:id="@+id/layout_safe_library">
            </include>
            <include layout="@layout/layout_corona_web"
                android:id="@+id/layout_corona_web">
            </include>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="20dp"
                android:background="@color/background_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="26dp"
                    android:text="(우)41566 대구광역시 북구 대학로80(산격동 1370) 경북대학교 도서관
\nCOPYRIGHT BY KYUNGPOOK NATIONAL UNIVERSITY. ALL RIGHTS RESERVED."
                    android:textColor="@color/text_third"
                    android:textSize="8sp"
                    android:fontFamily="@font/spoqahansans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="26dp"
                    android:text="경북대학교 도서관"
                    android:textColor="@color/text_third"
                    android:textSize="12sp"
                    android:fontFamily="@font/spoqahansans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:id="@+id/youtube"
                    android:layout_marginRight="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/youtube"
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>
                <ImageView
                    android:id="@+id/instagram"
                    android:padding="5dp"
                    android:layout_marginRight="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/instagram"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>
                <ImageView
                    android:id="@+id/facebook"
                    android:padding="5dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>







    <LinearLayout
        android:elevation="3dp"
        android:id="@+id/Tap_Layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_secondary"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:orientation="horizontal">



            <ImageView
                android:src="@drawable/logo1"
                android:id="@+id/hometitle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="@font/spoqahansans_bold"
                android:gravity="center"
                android:letterSpacing="-0.06"
                android:text="Stockholm Salad"
                android:textColor="@color/primary"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:alpha="0"
            android:id="@+id/tap_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/line_gray"></View>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

