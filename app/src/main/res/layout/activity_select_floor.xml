<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:orientation="vertical">



    <TextView
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fourth_floor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:gravity="center"
            android:fontFamily="@font/spoqahansans_regular"
            android:lineSpacingExtra="5dp"
            android:text="열람실의 층을 선택하여\n도서관 층별 현황을 확인해보세요"
            android:textColor="@color/text_primary"
            android:textSize="20sp"></TextView>


    <LinearLayout
        android:id="@+id/ground"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/icon_uncliked"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/B1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/sq_bottom_corner"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/ground">

        <TextView
            android:id="@+id/textview_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="지하1층 (59/100)"
            android:textColor="@color/text_primary"
            android:textSize="17sp"></TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/first_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="118dp"
        android:background="@drawable/sq_full"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="1층 (100/100)"
            android:textColor="@color/text_primary"
            android:textSize="17sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="206dp"
        android:background="@drawable/sq_full"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="2층 (100/100)"
            android:textColor="@color/text_primary"
            android:textSize="17sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="294dp"
        android:background="@drawable/sq"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="3층 (66/100)"
            android:textColor="@color/text_primary"
            android:textSize="17sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="382dp"
        android:background="@drawable/sq_top_corner"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="4층 (88/100)"
            android:textColor="@color/text_primary"
            android:textSize="17sp"></TextView>
    </LinearLayout>


    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/second_floor"
        app:layout_constraintStart_toStartOf="@id/second_floor"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/library1"
        android:layout_width="24dp"
        android:layout_height="24dp">
    </ImageView>
      <ImageView
        app:layout_constraintBottom_toBottomOf="@id/first_floor"
        app:layout_constraintEnd_toEndOf="@id/first_floor"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/library3"
        android:layout_width="22dp"
        android:layout_height="22dp">
    </ImageView>

    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/third_floor"
        app:layout_constraintEnd_toEndOf="@id/third_floor"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/library4"
        android:layout_width="24dp"
        android:layout_height="24dp">
    </ImageView>

    <ImageView
        app:layout_constraintEnd_toEndOf="@id/fourth_floor"
        app:layout_constraintBottom_toBottomOf="@id/fourth_floor"
        app:layout_constraintStart_toStartOf="@id/fourth_floor"
        android:layout_marginBottom="2dp"
        android:src="@drawable/library5"
        android:layout_width="24dp"
        android:layout_height="24dp">
    </ImageView>

    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/B1"
        app:layout_constraintStart_toStartOf="@id/B1"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/library2"
        android:layout_width="24dp"
        android:layout_height="24dp">
    </ImageView>






</androidx.constraintlayout.widget.ConstraintLayout>

