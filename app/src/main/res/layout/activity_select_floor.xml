<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:orientation="vertical">




    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#767676"
        android:layout_width="match_parent"
        android:layout_height="110dp">
    </LinearLayout>


    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/building"
        android:layout_marginBottom="20dp"
        android:layout_width="360dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        >
    </ImageView>






    <TextView
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fourth_floor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:gravity="center"
            android:fontFamily="@font/spoqahansans_regular"
            android:lineSpacingExtra="5dp"
            android:text="열람실의 층수를 선택하여\n층별 열람실 현황을 확인해보세요"
            android:textColor="@color/text_primary"
            android:textSize="18sp"></TextView>


    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/building"
        android:layout_marginBottom="20dp"
        android:layout_width="360dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        >
    </ImageView>




    <LinearLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/B1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/textview_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/rec"
            android:layout_marginBottom="8dp"
            android:text="B1 이용가능"
            android:textColor="@color/text_primary"
            android:textSize="15sp"></TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/first_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:background="@drawable/rec_full"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="1층 만석"
            android:textColor="@color/text_primary"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="196dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_marginTop="6dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/rec_full"
            android:id="@+id/textview_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:text="2층 만석"
            android:textColor="@color/text_primary"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_floor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="284dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_regular"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/rec"
            android:text="3층 이용가능"
            android:textColor="@color/text_primary"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_floor"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="372dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@drawable/rec"
            android:fontFamily="@font/spoqahansans_regular"
            android:gravity="center"
            android:text="4층 이용가능"
            android:textColor="@color/text_primary"
            android:textSize="15sp"></TextView>
    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>

