<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fullscreen"
    android:background="@color/background_secondary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/background_secondary"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/spoqahansans_bold"
            android:lineSpacingExtra="5dp"
            android:text="경북대학교 도서관\n크누버리에서 안전하게"
            android:textColor="@color/text_primary"
            android:textSize="22sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/spoqahansans_regular"
            android:lineSpacingExtra="5dp"
            android:text="우리 모두가 함께 만들어가는 안전한 도서관\n여러분이 직접 크누버리에서 만들어주세요"
            android:textColor="@color/text_second"
            android:textSize="14sp"></TextView>

    </LinearLayout>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/logo3"
        app:layout_constraintBottom_toTopOf="@id/button_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top"></ImageView>


    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/primary"
        android:backgroundTint="@color/primary"

        android:fontFamily="@font/spoqahansans_bold"
        android:letterSpacing="-0.03"

        android:text="시작하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>

