<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="36dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:minLines="2"
            android:id="@+id/textView_time_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="이용시간을 선택해주세요"
            android:textColor="@color/text_primary"
            android:textFontWeight="700"
            android:textSize="18sp"
            />

        <TimePicker
            android:id="@+id/timePicker"
            style="@style/AppTheme.NumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/button_no"
            android:background="@drawable/sq_darkgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="취소"
                android:textColor="@color/white"
                android:fontFamily="@font/spoqahansans_medium"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/sq_black"
            android:id="@+id/button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="확인"
                android:textColor="@color/white"
                android:fontFamily="@font/spoqahansans_medium"
                android:textSize="15sp"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>