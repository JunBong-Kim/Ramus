<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog_wihte"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dialog_text_view_title"
        android:layout_marginVertical="26dp"
        android:layout_marginHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/spoqahansans_medium"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="사용자의 위치정보를 확인하기 위해\n위치 서비스가 필요해요."
        android:textFontWeight="700"
        android:textColor="@color/primary"
        android:textSize="16sp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/location_permission_cancel"
            android:background="@drawable/rec_dialog_no"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:fontFamily="@font/spoqahansans_medium"
                android:text="취소"
                android:textColor="@color/primary"
                android:textFontWeight="700"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/location_permission_ok"
            android:background="@drawable/rec_dialog_yes"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/spoqahansans_medium"
                android:text="확인"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
