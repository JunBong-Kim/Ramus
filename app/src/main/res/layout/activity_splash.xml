<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:fitsSystemWindows="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/splash_image"
        android:src="@drawable/logo"
        android:layout_width="85dp"
        android:layout_height="77dp"
        android:scaleType="fitXY"
        >
    </ImageView>

    <ImageView
        android:fitsSystemWindows="false"
        app:layout_constraintTop_toBottomOf="@id/splash_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/splash"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        >
    </ImageView>


    <TextView
        android:layout_marginBottom="36dp"
        app:layout_constraintTop_toBottomOf="@id/splash"
        android:layout_marginTop="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="COPYRIGHT BY KYUNGPOOK NATIONAL UNIVERSITY.\nALL RIGHTS RESERVED."
        android:textColor="@color/text_third"
        android:textSize="10sp"
        android:fontFamily="@font/spoqahansans_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>






</androidx.constraintlayout.widget.ConstraintLayout>