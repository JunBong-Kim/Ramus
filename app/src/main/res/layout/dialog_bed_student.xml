<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="330dp"
        android:layout_height="470dp"
        android:background="@drawable/rec_dialog_wihte_seat"
        app:layout_constraintTop_toTopOf="@id/image_watch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="63dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:background="@drawable/rec_dialog_gray"
            android:layout_width="match_parent"
            android:layout_height="87dp">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_mask"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/image_mask"
                    android:src="@drawable/mask_please"
                    android:layout_width="45dp"
                    android:layout_height="45dp">
                </ImageView>

                <TextView
                    android:layout_marginLeft="22dp"
                    app:layout_constraintStart_toEndOf="@id/image_mask"
                    app:layout_constraintTop_toTopOf="@id/image_mask"
                    android:text="마스크가 착용되지 않았나요?"
                    android:letterSpacing="-0.05"
                    android:id="@+id/title_mask"
                    android:fontFamily="@font/spoqahansans_medium"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    app:layout_constraintStart_toStartOf="@id/title_mask"
                    app:layout_constraintTop_toBottomOf="@id/title_mask"
                    android:text="코스크, 턱스크 X\n올바른 마스크 착용 권유하기"
                    android:fontFamily="@font/spoqahansans_medium"
                    android:textColor="@color/text_third"
                    android:layout_marginTop="2dp"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <View
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_noize"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/image_noize"
                    android:padding="2dp"
                    android:src="@drawable/noize"
                    android:layout_width="45dp"
                    android:layout_height="45dp">
                </ImageView>

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="22dp"
                    app:layout_constraintStart_toEndOf="@id/image_noize"
                    app:layout_constraintTop_toTopOf="@id/image_noize"
                    android:text="지나친 소음을 만들고있나요?"
                    android:id="@+id/title_noize"
                    android:fontFamily="@font/spoqahansans_medium"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    app:layout_constraintStart_toStartOf="@id/title_noize"
                    app:layout_constraintTop_toBottomOf="@id/title_noize"
                    android:layout_marginTop="2dp"
                    android:text="열람실내 정숙 부탁하기"
                    android:fontFamily="@font/spoqahansans_medium"
                    android:textColor="@color/text_third"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <View
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_no_seat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/image_no_seat"
                    android:padding="2dp"
                    android:src="@drawable/no_seat"
                    android:layout_width="45dp"
                    android:layout_height="45dp">
                </ImageView>

                <TextView
                    android:layout_marginLeft="22dp"
                    app:layout_constraintStart_toEndOf="@id/image_no_seat"
                    app:layout_constraintTop_toTopOf="@id/image_no_seat"
                    android:text="장시간 자리를 비우고있나요?"
                    android:id="@+id/title_no_seat"
                    android:fontFamily="@font/spoqahansans_medium"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:letterSpacing="-0.05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    app:layout_constraintStart_toStartOf="@id/title_no_seat"
                    app:layout_constraintTop_toBottomOf="@id/title_no_seat"
                    android:layout_marginTop="2dp"
                    android:text="여러 사용자의 신고를 받을경우\n불이익을 받을 수 있어요"
                    android:fontFamily="@font/spoqahansans_medium"
                    android:textColor="@color/text_third"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </LinearLayout>



    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/image_watch"
        android:src="@drawable/watch"
        android:layout_width="150dp"
        android:layout_height="150dp">
    </ImageView>


    <TextView
        app:layout_constraintBottom_toBottomOf="@id/image_watch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="130dp"

        android:text="건강한 도서관 만들기"
        android:fontFamily="@font/spoqahansans_medium"
        android:letterSpacing="-0.05"
        android:textColor="@color/text_primary"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
