<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="90dp"
        android:paddingLeft="40dp"
        android:paddingBottom="22dp"
        android:id="@+id/laout_myinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/layout_name"
            app:layout_constraintTop_toTopOf="@id/layout_seat"
            app:layout_constraintBottom_toBottomOf="@id/layout_seat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansans_bold"
                    android:gravity="center"
                    android:letterSpacing="-0.05"
                    android:text="조준식"
                    android:textColor="@color/text_primary"
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansans_light"
                    android:letterSpacing="-0.05"
                    android:text="님"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp" />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansans_regular"
                    android:text=">"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/textView_student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016113597"
                android:fontFamily="@font/spoqahansans_regular"
                android:textColor="@color/text_second"
                android:textSize="13sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_seat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginRight="26dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/recdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/textView_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제2열람실 A - 32번"
                android:fontFamily="@font/spoqahansans_medium"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.03"
                android:text="10 : 00 ~ 22 : 30"
                android:fontFamily="@font/spoqahansans_regular"
                android:textColor="@color/text_primary"
                android:textSize="11sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/view_center"
        app:layout_constraintTop_toBottomOf="@id/laout_myinfo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:background="@color/line_gray" />


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/view_center"
        android:id="@+id/login_no_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout_report"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_finish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/center_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal">
        </LinearLayout>

        <ImageView
            android:id="@+id/image_siren"
            android:src="@drawable/siren"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/center_view"
            android:layout_width="90dp"
            android:layout_height="90dp">
        </ImageView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/image_siren"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_view"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_medium"
            android:letterSpacing="-0.05"
            android:text="신고하기"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            />


        <View
            android:id="@+id/center_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/line_gray"
            >
        </View>

        <ImageView
            android:id="@+id/image_end"
            android:src="@drawable/end"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/center_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:layout_width="90dp"
            android:layout_height="90dp">
        </ImageView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/image_end"
            app:layout_constraintStart_toStartOf="@id/center_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansans_medium"
            android:letterSpacing="-0.05"
            android:text="사용종료"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>